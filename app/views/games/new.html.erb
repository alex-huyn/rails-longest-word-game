<div>
  <h1>NEW GAME</h1>
</div>
<div>
  <ul>
  <% @letters.each do |letter| %>
    <li class="list"><%= letter %></li>
  <% end %>
  </ul>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" class="form">
  <input type="text" name="answer" class="input", placeholder="Your answer here">
  <input type="submit" value="Submit!" class="btn">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

